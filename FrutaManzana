#include <iostream>

using namespace std;

class Fruta{
    private:
        string nombre;
        string color;
        
    public:
        void setNombre(string pNombre){
            this->nombre = pNombre;  
        }
        
        void setColor(string pColor){
            this->color = pColor;  
        }
        
        string getNombre(){
            return this->nombre;
        }
        
        string getColor(){
            return this->color;
        }
};

int main()
{
    Fruta frutita;
    frutita.setNombre("Manzana");
    frutita.setColor("Rojo");
    
    cout<<frutita.getNombre()<<endl;
    cout<<frutita.getColor()<<endl;

    return 0;
}
